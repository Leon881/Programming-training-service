@model Models.Lesson
@{
	ViewData["Title"] = "Добавление урока";
}
<script>
	function addInput() {
		var str = '<p><input type="file" name="uploadedLessonPictures" /></p>';
		document.getElementById('inputPictures').innerHTML = document.getElementById('inputPictures').innerHTML + str;
	}
</script>
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddLesson" asp-controller="Lessons" method="post" enctype="multipart/form-data">
	<p>
		<b>Название урока:</b><br>
		<input type="text" name="newLessonName" size="40">
	</p>
	<p>
		<b>Загрузите HTML файл с уроком:</b><br>
		<input type="file" name="uploadedNewLessonHTML" /><br>
	</p>
	<p>
		<b>Прикрепите изображения:</b><br>
		<div id="inputPictures"></div>
	</p>

	<div class="add" onclick="addInput()">+</div>
	<p>
		<input type="submit" value="Загрузить" />
	</p>
</form>
